{
    "name": "pso-1-1/happypot",
    "description": "A simple recipe sharing website",
    "type": "project",
    "license": "proprietary", 
    "require": {
        "php": "^8.1",
        "ext-mysqli": "*",
        "ext-gd": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpmd": "phpmd . text cleancode,codesize,controversial,design,naming,unusedcode"
    },
    "config": {
        "sort-packages": true
    }
} 